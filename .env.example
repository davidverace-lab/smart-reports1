# ============================================================
# CONFIGURACIÓN DE BASE DE DATOS - Smart Reports
# ============================================================

# TIPO DE BASE DE DATOS
# Opciones: 'mysql' (casa) o 'sqlserver' (trabajo)
DB_TYPE=mysql

# ============================================================
# CONFIGURACIÓN MYSQL (CASA - PRUEBAS)
# ============================================================
# Descomenta estas líneas si usas MySQL
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=tu_password_mysql
# DB_NAME=tngcore

# ============================================================
# CONFIGURACIÓN SQL SERVER (TRABAJO - PRODUCCIÓN)
# ============================================================
# Descomenta estas líneas si usas SQL Server
# DB_TYPE=sqlserver
# DB_HOST=tu_servidor_sql_server
# DB_PORT=1433
# DB_USER=tu_usuario
# DB_PASSWORD=tu_password
# DB_NAME=tngcore
# DB_TRUSTED=no  # Cambiar a 'yes' para Windows Authentication

